<?xml version="1.0" encoding="utf-8"?>
<com.example.notes.views.NoteView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/noteDescription"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgDelete"
            android:layout_marginStart="16dp"/>
    <ImageButton
            android:id="@+id/imgDelete"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="@id/noteDescription"
            app:layout_constraintBottom_toBottomOf="@id/noteDescription"
            android:src="@drawable/ic_delete"
            android:layout_width="@dimen/image_icon_default"
            android:layout_height="@dimen/image_icon_default"
            android:layout_marginEnd="@dimen/item_margin_default"/>
</com.example.notes.views.NoteView>